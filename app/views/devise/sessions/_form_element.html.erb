<div class="middle-element">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class= "middle-content-email">
  <div class="input">
    <p class="input-name">Email</p>
    <div class="input-wrapper">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Rentrez votre email" %>
      <i class="fa-solid fa-envelope"></i>
    </div> 
  </div>
</div>

<div class ="middle-content-password">
  <div class="input">
    <p class="input-name">Mot de passe</p>
    <div class="input-wrapper">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Rentrez votre mot de passe" %>
    <i class="fa-solid fa-lock"></i>
    </div>  
  </div>
  </div>
  
    <div> <%= link_to "Mot de passe oublié?", new_password_path(resource_name), class:"forgot-your-password" %><br /></div>  
  
  <% if devise_mapping.rememberable? %>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div>
  
  <% end %>
</div>


<div class="bottom">
  <div class="input">
    <div class="action">
      <%= f.submit "Se connecter" %>
      <div class="under-button">
        <p>Pas encore de compte ? <%= link_to "Crée le vite!", new_registration_path(resource_name), class:"subscribe" %><br /></p>
      </div>
    </div>  
  </div>   
</div> 
  

<% end %>

