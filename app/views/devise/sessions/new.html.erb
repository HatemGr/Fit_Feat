
<div class=" form-container">

  <div class="form-container-left">
    <div class="img-fluid">
    </div>
  </div>

  <div class="form-container-right">

    <div class="right-content"> 
      <div class="top-element">
          <h1 class="title">Welcome back</h1>
          <hr class ="title-lign">
           <p class ="under-title"> Connecte toi Ã  ton compte pour voir tes amis et tes performances sportives</p>
      </div>
        <div class="middle-element">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class= "middle-content-email">
            <div class="input">
             <p class="input-name">Email</p>
              <div class="input-wrapper">
               <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Rentrez votre email" %>
               <i></i>
              </div> 
            </div>
          </div>

          <div class ="middle-content-password">
            <div class="input">
              <p class="input-name">Password</p>
             <div class="input-wrapper">
              <%= f.password_field :password, autocomplete: "current-password" %>
              <i></i>
             </div>  
            </div>
           </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            
            <% end %>

            <%= render "devise/shared/links" %>
         </div>

         <div class="input">
            <div class="action">
              <%= f.submit "Log in" %>
            </div>
          </div>  
          <% end %>
    </div>    
  </div>
</div>