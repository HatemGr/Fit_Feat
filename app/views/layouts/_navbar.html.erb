            <%= render "layouts/tabs/friends_tab" %>
          <% elsif current_page?(sport_user_path(current_user))%>
            <%= render "layouts/tabs/sport_user_tab" %>
          <% elsif current_page?(events_path)%>
            <%= render "layouts/tabs/events_tab" %>
          <% elsif current_page?(messages_path)%>
