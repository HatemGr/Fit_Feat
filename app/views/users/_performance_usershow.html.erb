<div class="d-flex align-items-start wrapper-performance" style="width:100%">
  <div class="nav flex-column nav-pills me-3 tabs-items" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <%# Hardcoding first button with class 'active' et aria-selected=true%>
      <button class="nav-link active" id="v-pills-<%= @user.sports.first.id%>-tab" data-bs-toggle="pill" data-bs-target="#v-pills-<%= @user.sports[0].id%>" type="button" role="tab" aria-controls="v-pills-<%= @user.sports.first.id%>" aria-selected="true"><%= @user.sports.first.french%></button>
      <%# Then drop first button to prevent repetition%>
     <% @user.sports.drop(1).each do |sport| %>
            <button class="nav-link" id="v-pills-<%= sport.id%>-tab" data-bs-toggle="pill" data-bs-target="#v-pills-<%= sport.id%>" type="button" role="tab" aria-controls="v-pills-<%= sport.id%>" aria-selected="false"><%= sport.french%></button>
     <%end%>
  </div>
   <div class="tab-content tabs-content" id="v-pills-tabContent">
   <%# Adding first content with class 'active' and 'show'%>
      <div class="tab-pane fade active show" id="v-pills-<%= @user.sports.first.id%>" role="tabpanel" aria-labelledby="v-pills-<%= @user.sports[0].id%>-tab">
            <div class="card">
                  <p class="card-title"> Performance </p>
                  <p class="card-icon"> <i class="fa-solid fa-trophy"></i> </p>
                  <% if @user.sports.first.name == "Workout" && @user.workout_perf.present?%>
                        <div> <%= render partial: 'users/performances_show/workout_perf_show', locals: {user: @user}%> </div>
                  <%elsif @user.sports.first.name == "Running" && @user.running_perf.present?%>
                        <div> <%= render partial: 'users/performances_show/running_perf_show', locals: {user: @user}%> </div>
                  <%elsif @user.sports.first.name == "Tennis" && @user.tennis_perf.present?%>
                        <div> <%= render partial: 'users/performances_show/tennis_perf_show', locals: {user: @user}%> </div>
                  <%elsif @user.sports.first.name == "Climbing" && @user.climbing_perf.present?%>
                        <div> <%= render partial: 'users/performances_show/climbing_perf_show', locals: {user: @user}%> </div>
                  <%end%>
            </div>
      </div>
   <% @user.sports.each do |sport| %>
      <div class="tab-pane fade" id="v-pills-<%= sport.id%>" role="tabpanel" aria-labelledby="v-pills-<%= sport.id%>-tab">
            <div class="card">
                  <p class="card-title"> Performance </p>
                  <p class="card-icon"> <i class="fa-solid fa-pen-to-square" ></i> </p>
                  <% if sport.name == "Workout" && !@user.workout_perf.empty?%>
                        <div> <%= render partial: 'users/performances_show/workout_perf_show', locals: {user: @user}%> </div>
                  <%elsif sport.name == "Running" && !@user.running_perf.empty?%>
                        <div> <%= render partial: 'users/performances_show/running_perf_show', locals: {user: @user}%> </div>
                  <%elsif sport.name == "Tennis" && !@user.tennis_perf.empty?%>
                        <div> <%= render partial: 'users/performances_show/tennis_perf_show', locals: {user: @user}%> </div>
                  <%elsif sport.name == "Climbing" && !@user.climbing_perf.empty?%>
                        <div> <%= render partial: 'users/performances_show/climbing_perf_show', locals: {user: @user}%> </div>
                  <%end%>
            </div>
      </div>
   <%end%>
   </div>
</div>
