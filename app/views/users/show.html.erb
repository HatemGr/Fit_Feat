<div class="container-dashboard">
  <% if @user == current_user %>
      <div class="edit-profil-btn">
        <h1> Hello <%= current_user.first_name%> 👋🏻</h1> 
        <%= link_to 'Modifie ton profil', edit_user_path(@user), class:'button primary' %>
      </div>
      <%= render 'users/notif-meteo/notif_meteo'%>
    <%else%>
      <%= render 'other_user_info'%>
    <%end%>
  <%if @user.sports.present?%>
    <%= render 'performance_usershow'%>
  <%end%>

  <div class="card">
  <p class="card-title"> Les prochaines evenements à venir pour <%= @user.full_name %> </p>
  <p class="card-icon"> <i class="fa-solid fa-calendar-plus"></i></i> </p> 
  <div class="container-geoloc">
    <div class="list-container">
      <div class="container">
        <%= render partial: 'events/event_list', locals: {events: @user_events}%>
      </div>
    </div>
  </div>

</div>
