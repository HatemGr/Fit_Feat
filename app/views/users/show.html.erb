<div class="user-show">
  <div class="wrapper-not-meteo">
    <div class="notification-card card"></div>
    <div class="meteo-card card"></div>
  </div>
  <p>
    <strong>First name:</strong>
    <%= @user.first_name ? @user.first_name : 'Donnee non renseignée' %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= @user.last_name ? @user.last_name : 'Donnee non renseignée' %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @user.description ? @user.description : 'Donnee non renseignée' %>
  </p>
  <p>
    <strong>Adresse:</strong>
    <%= @user.address ? @user.address : 'Donnee non renseignée' %>
  </p>
  <p>
    <strong>City:</strong>
    <%= @user.city ? @user.city.name : 'Donnee non renseignée' %>
  </p>
  <%= button_to 'Se Déconnecter', destroy_user_session_path, :method => :delete, class: 'button primary'%>
  <p id="notice"><%= notice %></p>
  <%= button_to 'se deco', destroy_user_session_path, :method => :delete, class: 'button primary'%>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
  <%if @user.longitude %>
    <div id='map'
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"
          data-markers="<%= @markers.to_json %>"
          data-user-lng="<%= @user.longitude%>"
          data-user-lat="<%= @user.latitude%>">
    </div>
  <%end%>
  <div class="suggestions-list">
    <h3>Suggestions </h3>
    <ul>
      <% @user.suggestions.each do |suggestion|%>
        <%if !suggestion.accepted && (!suggestion.pair_suggestion.refused || !suggestion.refused) %>
          <li>
            <%=link_to suggestion.partner.full_name , user_path(suggestion.partner) %>
            <%link_to "Accepter", suggestion_path(suggestion, accpeted: true), method: :patch %>
            <%link_to "Refuser", suggestion_path(suggestion, accpeted: false), method: :patch %>
            <%if !suggestion.accepted && !suggestion.pair_suggestion.accepted%>
              En attente de validation
            <%end%>
          </li>
        <%end%>
      <%end%>
    </ul>
  </div>
  <div class="friends-list">
    <h3>Amis</h3>
    <ul>
      <% @user.friends.each do |friend|%>
        <li>
          <%= link_to friend.full_name, controller: "users", action: "show", id: friend.id %>
        </li>
      <%end%>
    </ul>
  </div>
  <h2>Partie Sport</h2>
  <%if !@user.running_perf.empty?%>
    <div class="perf-container"> <%= render partial: 'running_perf', locals: {user: @user}%> </div>
  <%end%>
  <%if !@user.workout_perf.empty?%>
    <div class="perf-container"> <%= render partial: 'workout_perf', locals: {user: @user}%> </div>
  <%end%>
  <%if !@user.climbing_perf.empty?%>
    <div class="perf-container"> <%= render partial: 'climbing_perf', locals: {user: @user}%> </div>
  <%end%>
  <%if !@user.tennis_perf.empty?%>
    <div class="perf-container"> <%= render partial: 'tennis_perf', locals: {user: @user}%> </div>
  <%end%>
</div>
<%= javascript_include_tag 'map_box'%>
