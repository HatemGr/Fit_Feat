<div class="flex-row-between-flex-start">
  <%=form_for :climbing_performances, url: climbing_performances_path, method: :post do |f|%>
      <div class="input">
        <p class="input-name">Experience</p>
        <div class="input-wrapper">
          <%= f.number_field :experience, placeholder: "Depuis combien d'annÃ©e pratique tu ce sport ?" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>

      <div class="input">
        <p class="input-name">Frequence</p>
        <div class="input-wrapper">
          <%= f.number_field :frequency, placeholder: "Combien de fois par semaines en fait tu ?" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>
      
      <div class="input">
        <p class="input-name">Level</p>
        <div class="input-wrapper">
          <%= f.select :level, ClimbingLevel.all.map{|level| level.level} ,placeholder: "Entrez votre niveau" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>

      <div class="input">
        <p class="input-name">Block color</p>
        <div class="input-wrapper">
          <%= f.select :block_color, ClimbingBlockColor.all.map{|block| block.block_color} ,placeholder: "Rentrez votre couleur de block" %>
          <i class="fa-solid fa-paintbrush"></i>
        </div> 
      </div>
      
      <div class="input">
      <div class="actions">
        <%= f.submit('Soumettre') %>
      </div>
      </div>
    <%end%>
    <div > <%= image_tag "climbing.png" %> </div>
</div>