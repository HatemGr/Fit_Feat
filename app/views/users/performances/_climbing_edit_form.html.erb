<div class="flex-row-between-flex-start">
  <%=form_for :climbing_performances, url: climbing_performances_path, method: :post do |f|%>

    <div class="container">
    <div class="row">
      <div class="input col-sm">
        <p class="input-name">Experience</p>
        <div class="input-wrapper">
          <%= f.number_field :experience, value:user.get_sport_user("Climbing").experience ,placeholder: "Depuis combien d'annÃ©e pratique tu ce sport ?" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>

      <div class="input col-sm">
        <p class="input-name">Frequence</p>
        <div class="input-wrapper">
          <%= f.number_field :frequency, value:user.get_sport_user("Climbing").frequency,placeholder: "Combien de fois par semaines en fait tu ?" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>
      
      <div class="input col-sm">
        <p class="input-name">Level</p>
        <div class="input-wrapper">
          <%= f.select :level, options_for_select(ClimbingLevel.all.map{|level| level.level}, user.last_climbing_perf.level),placeholder: "Entrez votre niveau" %>
          <i class="fa-solid fa-signal"></i>
        </div> 
      </div>

      <div class="input col-sm">
        <p class="input-name">Block color</p>
        <div class="input-wrapper">
          <%= f.select :block_color, options_for_select(ClimbingBlockColor.all.map{|block| block.block_color}, user.last_climbing_perf.block_color) ,placeholder: "Rentrez votre couleur de block" %>
          
          <i class="fa-solid fa-paintbrush"></i>
        </div> 
      </div>
      </div>
      </div>
      
      <div class="input">
      <div class="actions" style="margin:15px 0px 0px 13px">
        <%= f.submit('Sauvegarder') %>
      </div>
      </div>
    <%end%>
    <div > <%= image_tag "climbing.png" %> </div>
</div>