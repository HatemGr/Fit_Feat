document.getElementById("title-conversation").innerText="<%=@recipient.full_name%>"
document.getElementById("form-message").innerHTML = "";
document.getElementById("form-message").insertAdjacentHTML("beforeend", "<%= j render 'form', {message: @new_message, recipient: @recipient}%> ")
var display = document.getElementById("message-display");
<%if @already_conversation%>
    display.insertAdjacentHTML("beforeend", "<%= j render 'message_display', message: @message%> ");
<%else%>
    display.innerHTML = "";
<%end%>
display.scrollTop = document.getElementById("message-display").scrollHeight;


