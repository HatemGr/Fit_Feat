<div class="event-show-content">
  <div class="event-show-image">
    <% if event.image.attached? %>
      <%= image_tag event.image %>
    <%else%>
      <%= image_tag 'eventdefault.png' %>
    <% end %>
  </div>
  <div class="event-show-main">
    <div class="event-date-container up">
      <p class="event-date-day"> <%= event.date.strftime("%d")%> </p>
      <p> <%= event.date.strftime("%B") %>  </p>
    </div>
    <div class="event-content">
      <h3> <%= link_to event.title, controller: "events", action: "show", id: event.id %>  </h3>
      <%if event.description == nil %>
        <p> L'event n'a pas de description. </p>
      <%else%>
        <p> Description: <%= event.description %>  </p>
      <%end%>
      <br>
      <%= render partial: 'events/event_participations_detail', locals: {event: event}%>
      <%if event.admin != current_user %>
        <%= render partial: 'events/event_participate_buttons', locals: {event: event}%>
      <%end%>
      <div class ="input">
        <%= link_to "Voir l'Ã©venement", event_path(event), class: "button primary"  %>
      </div>
    </div>
    <div class="event-sport-tag"> <%=event.sport.name%> </div>
  </div>
</div>
