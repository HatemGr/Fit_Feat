<div class="show-event-container form-container">

  <%= render 'show_image' %>

  <div class="right-container right-content">
    <%= render 'show_title' %>

    <p id="notice"><%= notice %></p>

    <div class="row1-container">
      <div class="box box-down cyan">
        <h2>Organisateurs</h2>
        <p><%= @event.admin.full_name %></p>
        <i class="fa-solid fa-user" style="font-size: 1.2em"></i>
      </div>

      <div class="box red">
        <h2>Sport</h2>
        <p><%= @event.sport.name %></p>
        <i class="fa-solid fa-volleyball" style="font-size: 1.2em"></i>
      </div>

      <div class="box box-down blue">
        <h2>Description</h2>
        <p><%= @event.description %></p>
        <i class="fa-solid fa-comment" style="font-size: 1.2em"></i>
      </div>
    </div>
    
    <div class="row2-container">
      <div class="box orange">
        <h2>Date: </h2>
        <p><%= @event.date %></p>
        <i class="fa-solid fa-calendar" style="font-size: 1.2em"></i>
      </div>
    </div>
    
    <div class="row3-container">
      <div class="box purple">
        <h2>Adresse: </h2>
        <p><%= @event.full_address %></p>
        <i class="fa-solid fa-location-dot" style="font-size: 1.2em"></i>
      </div>

      <div class="box purple">
        <h2>Dur√©e: </h2>
        <p><%= @event.duration %></p>
        <i class="fa-solid fa-stopwatch" style="font-size: 1.2em"></i>
      </div>
    </div>

    <div>
      <%= render partial: 'events/event_participate_buttons', locals: {event: @event}%>
    </div>

    <div class="container">
      <div class="row">
        <%if @event.longitude %>
          <div id='map-event' class="mapbox-container"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>"
                data-event-lng="<%= @event.longitude%>"
                data-event-lat="<%= @event.latitude%>">
          </div>
        <%end%>
      </div>
    </div>

    <div class="button-row">
      <%if current_user == @event.admin %>
      <%= link_to 'Edit', edit_event_path(@event) %> |
      <%end%>
      <%= link_to 'Back', events_path%>
    </div>      

  </div>

</div>

<%= javascript_include_tag 'map_box'%>