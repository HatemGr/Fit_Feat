<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Admin</th>
      <th>Sport</th>
      <th>Ville</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Addresse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.admin.full_name %></td>
        <td><%= event.sport.name %></td>
        <td><%= event.city.name %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.full_address %></td>
        <td><%= link_to 'Afficher', event %></td>
        <td><%= link_to 'Editer', edit_event_path(event) %></td>
        <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

