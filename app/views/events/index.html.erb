<div class="container-dashboard">
    <div class="edit-profil-btn">
      <h1> Events 🏅</h1> 
      <%= link_to 'Crée un event', new_event_path, class:'button primary' %>
    </div>

   <div class="card">
  <p class="card-title"> Rencontre des gens lors d'evenements sportifs </p>
  <p class="card-icon"> <i class="fa-solid fa-calendar-plus"></i></i> </p> 
  <div class="container-geoloc">
    <div class="list-container">
      <div class="container">
  <% if @events.empty?%>
        <p> Tu n'as pas encore d'event autour de toi, renseigne ton addresse ! </p>
  <%else%>
        <h2> Les evenements autour de toi (scroll)</h2>
        <%=render partial: 'events_around', locals: {events: @events}%>
  <%end%>
      </div>
    </div>
  </div>
</div>

    <div class="card">
      <p class="card-title"> Fait vivre la communauté en organisants des propres events </p>
      <p class="card-icon"> <i class="fa-solid fa-calendar-plus"></i></i> </p> 
      
      <%if @current_user_events.empty?%>
      <p> Tu n'as pas encore crée d'event ! </p>
      <%= link_to new_event_path, class: "link-button" do %>
           Créer un event <i class="fa-solid fa-arrow-right"></i> 
      <%end%>
      <%else%>
      <%= render partial: 'event_list', locals: {events: @current_user_events}%>
      <%end%>
    </div>
</div>
